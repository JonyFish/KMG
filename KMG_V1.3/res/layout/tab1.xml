<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:id="@+id/RelativeLayout_main1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ScrollView
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<Button
				android:textColor="#fffafafa"
				android:gravity="left"
				android:id="@+id/button_page1_top1"
				android:background="@drawable/corners_bg_top"
				android:padding="8.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5.0dip"
				android:layout_marginTop="13.0dip"
				android:layout_marginRight="5.0dip"
				android:text="当前网络类型：\n网络接入点名："
				android:shadowColor="#ff000000"
				android:shadowRadius="2.0"
				android:layout_centerHorizontal="true"/>

			<Button
				android:textColor="#fffafafa"
				android:gravity="left"
				android:id="@+id/button_page1_top2"
				android:background="@drawable/corners_bg_top"
				android:padding="8.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5.0dip"
				android:text="系统代理IP ： \n网关分配IP ："
				android:shadowColor="#ff000000"
				android:shadowRadius="2.0"
				android:layout_below="@+id/button_page1_top1"
				android:layout_centerHorizontal="true"/>

		</RelativeLayout>

	</ScrollView>

	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/relate"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/bottoview">

		<LinearLayout
			android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0">

				<Button
					android:textSize="15.0dip"
					android:textColor="#fffafafa"
					android:gravity="center_horizontal"
					android:background="@drawable/button_style"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_margin="5.0dip"
					android:text="防跳设置"
					android:shadowColor="#ff000000"
					android:shadowRadius="2.0"
					android:id="@+id/tab1Button1"/>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0">

				<Button
					android:textSize="15.0dip"
					android:textColor="#fffafafa"
					android:gravity="center_horizontal"
					android:background="@drawable/button_style"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_margin="5.0dip"
					android:text="状态检测"
					android:shadowColor="#ff000000"
					android:shadowRadius="2.0"
					android:layout_centerHorizontal="true"
					android:id="@+id/tab1Button2"/>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0">

				<Button
					android:textSize="15.0dip"
					android:textColor="#fffafafa"
					android:gravity="center_horizontal"
					android:background="@drawable/button_style"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_margin="5.0dip"
					android:text="接入点设置"
					android:shadowColor="#ff000000"
					android:shadowRadius="2.0"
					android:id="@+id/tab1Button3"/>

			</RelativeLayout>

		</LinearLayout>

		<LinearLayout
			android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0">

				<Button
					android:textSize="15.0dip"
					android:textColor="#fffafafa"
					android:gravity="center_horizontal"
					android:background="@drawable/button_style"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_margin="5.0dip"
					android:text="启动服务"
					android:shadowColor="#ff000000"
					android:shadowRadius="2.0"
					android:id="@+id/tab1Button4"/>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0">

				<Button
					android:textSize="15.0dip"
					android:textColor="#fffafafa"
					android:gravity="center_horizontal"
					android:background="@drawable/button_style"
					android:padding="10.0dip"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_margin="5.0dip"
					android:text="关闭服务"
					android:shadowColor="#ff000000"
					android:shadowRadius="2.0"
					android:layout_centerHorizontal="true"
					android:id="@+id/tab1Button5"/>

			</RelativeLayout>

		</LinearLayout>

	</LinearLayout>

	<View
		android:id="@+id/bottoview"
		android:background="#00000000"
		android:layout_width="wrap_content"
		android:layout_height="10.0dip"
		android:layout_alignParentBottom="true"/>

</RelativeLayout>

