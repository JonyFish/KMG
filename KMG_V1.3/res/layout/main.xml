<?xml version="1.0" encoding="utf-8"?>
<TabHost
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<RelativeLayout
			android:orientation="horizontal"
			android:id="@+id/Rela1"
			android:layout_width="fill_parent"
			android:layout_height="45.0dip"
			android:layout_alignParentTop="true">
			
			<TextView
				android:background="@drawable/ic_launcher"
				android:layout_width="42.0dip"
				android:layout_height="42.0dip"
				android:layout_marginLeft="5.0dip"
				android:layout_alignParentBottom="true" />
			
			<TextView
				android:textSize="20.0dip"
				android:textColor="#fffefefe"
				android:id="@+id/titlepo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="KMG"
				android:layout_centerInParent="true"/>

		</RelativeLayout>

		<FrameLayout
			android:id="@android:id/tabcontent"
			android:padding="0.0dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_above="@+id/relate"
			android:layout_below="@+id/Rela1"/>

		<TabWidget
			android:id="@android:id/tabs"
			android:layout_width="fill_parent"
			android:layout_height="0.0px"
			android:layout_alignParentBottom="true"/>

		<TableLayout
			android:id="@+id/relate"
			android:background="#00FFFEFE"
			android:layout_width="fill_parent"
			android:layout_height="45.0dip"
			android:layout_alignParentBottom="true">

			<TableRow>

				<RelativeLayout
					android:id="@+id/Relayout_1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0">

					<Button
						android:textSize="18.0dip"
						android:textColor="#18B4ED"
						android:id="@+id/button1"
						android:background="#f0303030"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:text="控制中心"
						android:layout_centerHorizontal="true"
						android:onClick="button1"/>

				</RelativeLayout>

				<RelativeLayout
					android:orientation="vertical"
					android:id="@+id/Relayout_2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0">

					<Button
						android:textSize="18.0dip"
						android:textColor="#fffafafa"
						android:id="@+id/button2"
						android:background="#b0303030"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:text="模式配置"
						android:layout_centerHorizontal="true"
						android:onClick="button2"/>

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/Relayout_1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0">

					<Button
						android:textSize="18.0dip"
						android:textColor="#fffafafa"
						android:id="@+id/button3"
						android:background="#b0303030"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:text="帮助＆设置"
						android:layout_centerHorizontal="true"
						android:onClick="button3"/>

				</RelativeLayout>

			</TableRow>

		</TableLayout>

	</RelativeLayout>

</TabHost>

