<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content">

	<LinearLayout
		android:background="#80303030"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center">

		<TextView
			android:layout_height="wrap_content"
			android:text="使用教程"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:textColor="#FFFFFF"/>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:layout_margin="10dip"
			android:background="@drawable/about_bg">

			<TextView
				android:layout_height="wrap_content"
				android:text="内容加载中……"
				android:layout_width="wrap_content"
				android:id="@+id/tab3TextView1"
				android:textColor="#000000"
				android:textStyle="bold"/>

		</RelativeLayout>

		<CheckBox
			android:id="@+id/NoRoot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dip"
			android:text="免ROOT启动"
			android:textStyle="bold"
			android:textColor="#FFFFFF"/>

		<CheckBox
			android:id="@+id/PowerBoot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dip"
			android:text="开机自启"
			android:textColor="#FFFFFF"/>

		<CheckBox
			android:id="@+id/NetBoot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/PowerBoot"
			android:layout_marginLeft="12dip"
			android:text="网络自启"
			android:textColor="#FFFFFF"/>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:layout_margin="10dip"
			android:background="@drawable/about_bg">

			<TextView
				android:layout_height="wrap_content"
				android:text="内容加载中……"
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:id="@+id/tab3TextView2"
				android:textStyle="bold|italic|normal"/>

			<Button
				android:background="@drawable/button_style"
				android:textSize="15.0dip"
				android:textColor="#02DDFD"
				android:gravity="center_horizontal"
				android:padding="10.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5.0dip"
				android:text="立即加入QQ群"
				android:shadowColor="#1E34FB"
				android:shadowRadius="2.0"
				android:layout_centerHorizontal="true"
				android:id="@+id/tab3TextView3"
				android:layout_below="@+id/tab3TextView2"
				android:textStyle="bold|italic|normal"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:layout_margin="10dip"
			android:background="@drawable/about_bg">

			<TextView
				android:layout_height="wrap_content"
				android:text="内容加载中……"
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:textStyle="bold"
				android:id="@+id/tab3TextView4"/>

		</RelativeLayout>

	</LinearLayout>

</ScrollView>

